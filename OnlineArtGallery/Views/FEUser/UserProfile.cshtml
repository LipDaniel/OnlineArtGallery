    <script>
        $('.paynow').each(function () {
            var form = $(this);

            form.submit(function (event) {
                event.preventDefault();

                var checkoutspinner = form.find('.checkoutspinner');
                var submitCheckout = form.find('.submitCheckout');

                checkoutspinner.addClass('spinner-border spinner-border-sm');
                submitCheckout.prop('disabled', true);

                var fname = form.find('.fname').val().trim();
                var lname = form.find('.lname').val().trim();
                var address = form.find('.address').val().trim();
                var email = form.find('.checkoutemail').val().trim();
                var phone = form.find('.checkoutphone').val().trim();
                var total = form.find('.submitCheckout').data('total');
                var artwork_id = form.find('.artworkId').val().trim();
                var price = form.find('.auctionPrice').val().trim();

                if (fname === '' || lname === '' || email === '' || phone === '' || address === '') {
                    var toast = form.find('.toast');
                    var toastBody = toast.find('.toast-body');

                    toastBody.text("Shipping Information is Required!!!");
                    toast.toast('show');
                    toast.removeClass('bg-primary').addClass('bg-danger');
                    checkoutspinner.removeClass('spinner-border spinner-border-sm');
                    submitCheckout.prop('disabled', false);
                    return;
                }

                $.ajax({
                    method: "POST",
                    url: "/FEOrder/PayNow",
                    data: {
                        order_phone: phone,
                        order_address: address,
                        order_email: email,
                        order_fname: fname,
                        order_lname: lname,
                        order_total: total,
                        artwork_id: artwork_id,
                        price: price
                    }
                }).done(function (data) {
                    console.log('Success');
                    // Handle the response from the server (in this case, log 'Success')
                });
            });
        });

    </script>

