
@{
    ViewBag.Title = "View";

}

@section main
{
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">My Account<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">My Account</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="dashboard">
                <div class="container">
                    <div class="row">
                        <aside class="col-md-4 col-lg-3">
                            <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="tab-dashboard-link" data-toggle="tab" href="#tab-dashboard" role="tab" aria-controls="tab-dashboard" aria-selected="true">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-orders-link" data-toggle="tab" href="#tab-orders" role="tab" aria-controls="tab-orders" aria-selected="false">Orders</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-auction-link" data-toggle="tab" href="#tab-auction" role="tab" aria-controls="tab-auction" aria-selected="false">Auction</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-wonauction-link" data-toggle="tab" href="#tab-wonauction" role="tab" aria-controls="tab-wonauction" aria-selected="false">Won Auction</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-address-link" data-toggle="tab" href="#tab-address" role="tab" aria-controls="tab-address" aria-selected="false">Adresses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-account-link" data-toggle="tab" href="#tab-account" role="tab" aria-controls="tab-account" aria-selected="false">Account Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-password-link" data-toggle="tab" href="#tab-password" role="tab" aria-controls="tab-password" aria-selected="false">Reset password</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-artwork-link" data-toggle="tab" href="#tab-artwork" role="tab" aria-controls="tab-artwork" aria-selected="false">Request artwork</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/FEAuth/Logout">Sign Out</a>
                                </li>
                            </ul>
                        </aside><!-- End .col-lg-3 -->

                        <div class="col-md-8 col-lg-9">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">

                                    @if (TempData["SuccessMessage"] != null)
                                    {

                                        <span class="product-label label-new p-3">@TempData["SuccessMessage"]</span>
                                    }
                                    @if (TempData["FailedMessage"] != null)
                                    {
                                        <span class="product-label label-sale p-3">@TempData["FailedMessage"]</span>
                                    }
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Order Id</th>
                                                <th>Order Detail</th>
                                                <th>Total Price</th>
                                                <th>Detail</th>
                                                <th>Created Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Order)
                                            {
                                                <tr>
                                                    <td>@item.OrderId</td>
                                                    <td style="padding:0">
                                                    @foreach(var i in item.OrderItem)
                                                    {
                                                        <div class="d-flex mt-1 mb-1">
                                                            <img src="~/Content/assets/images/artwork/@i.Image" style="height:50px; width:50px"/>
                                                            @i.Name $@i.Price
                                                        </div>
                                                    }
                                                    </td>
                                                    <td>
                                                        $@item.OrderPrice
                                                    </td>
                                                    <td>
                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                                            Detail
                                                        </button>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">
                                                                    <div class="d-flex">
                                                                        <div>
                                                                            <span>First Name</span>
                                                                            <p>@item.Fname </p>
                                                                        </div>
                                                                        <div>
                                                                            <span>Last Name</span>
                                                                            <p>@item.Lname</p>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @item.CreatedDate
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <a href="category.html" class="btn btn-outline-primary-2"><span>GO SHOP</span><i class="icon-long-arrow-right"></i></a>
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-auction" role="tabpanel" aria-labelledby="tab-auction-link">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Artwork</th>
                                                <th>Reserve Price</th>
                                                <th>Your bid</th>
                                                <th>Current bid</th>
                                                <th>Time</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Auction)
                                            {
                                                <tr>
                                                    <td class="d-flex">
                                                        <div>
                                                            <img style="height:95px;width:95px" src="~/Content/assets/images/artwork/@item.artwork_image" />
                                                        </div>
                                                        <div class="ml-3" style=" padding-top: 15px;">
                                                            <a style="font-weight:500" href="/FEArtwork/ArtworkDetail/@item.artwork_id">@item.artwork_name</a>
                                                            <span class="d-block">by <a href="/FEArtwork/Artist/@item.artist_id">@item.artist_name</a> </span>
                                                        </div>
                                                    </td>
                                                    <td>$@item.reserve_price</td>
                                                    <td>$@item.your_bid</td>
                                                    <td>$@item.current_bid</td>
                                                    <td>
                                                        <span id="start-date" hidden class="start-date">@item.start_date</span>
                                                        <span id="end-date" hidden class="end-date">@item.end_date</span>
                                                        <div id="countdown" class="text-center text-white countdown" style="opacity: .5;width:179px" data-start="@item.start_date" data-end="@item.end_date">
                                                            <strong>

                                                            </strong>

                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div><!-- .End .tab-pane -->
                                <div class="tab-pane fade" id="tab-wonauction" role="tabpanel" aria-labelledby="tab-wonauction-link">
                                    <div class="row">
                                        @foreach (var item in ViewBag.WonAuction)
                                        {
                                            <div class="col-12 mb-3">
                                                <div class=" d-flex" style="box-shadow: rgba(0, 0, 0, 0.13) 0px 3.2px 7.2px, rgba(0, 0, 0, 0.11) 0px 0.6px 1.8px;">
                                                    <div class="col-3">
                                                        <img style="height:230px" src="~/Content/assets/images/artwork/@item.Artwork.artwork_image" />
                                                    </div>
                                                    <div class="col-6">
                                                        <div>
                                                            <p style="margin: 0; font-size: 20px; "> <a href="/FEArtwork/ArtworkDetail/@item.Artwork.artwork_id">@item.Artwork.artwork_name</a></p>
                                                            <span>by <a href="/FEArtwork/Artist/@item.Artwork.Artist.artist_id"> @item.Artwork.Artist.artist_name</a></span>
                                                        </div>
                                                        <div>
                                                            <p>Description</p>
                                                            <p>@item.Artwork.artwork_description</p>
                                                        </div>
                                                    </div>
                                                    <div style="text-align:center" class="col-3">
                                                        <p style="font-weight:500">Amount to pay</p>
                                                        <p>$@item.auction_current_bid</p>
                                                        <!-- Button trigger modal -->
                                                        @{
                                                            var id = "id" + (item.Artwork.artwork_id).ToString();
                                                        }
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#@id">
                                                            Pay now
                                                        </button>

                                                        <!-- Modal -->
                                                        <div style="text-align:left" class="modal fade" id="@id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered" style="max-width:1000px">
                                                                <div class="modal-content">
                                                                    <div class="modal-body p-5">
                                                                        <div class="">
                                                                            <div class="checkout">
                                                                                <div class="container">
                                                                                    <form id="checkout_(@item.Artwork.artwork_id)" class="checkout">
                                                                                        <div class="row">
                                                                                            <div class="col-lg-7">
                                                                                                <h2 class="checkout-title">Billing Details</h2><!-- End .checkout-title -->
                                                                                                <div class="row">
                                                                                                    <div class="col-sm-6">
                                                                                                        <label>First Name *</label>
                                                                                                        <input type="text" id="fname_@(item.Artwork.artwork_id)" class="form-control" value="@ViewBag.User.user_fname">
                                                                                                    </div><!-- End .col-sm-6 -->

                                                                                                    <div class="col-sm-6">
                                                                                                        <label>Last Name *</label>
                                                                                                        <input type="text" id="lname_@(item.Artwork.artwork_id)" class="form-control" value="@ViewBag.User.user_lname">
                                                                                                    </div><!-- End .col-sm-6 -->
                                                                                                </div><!-- End .row -->

                                                                                                <label>Address *</label>
                                                                                                <input type="text" id="address_@(item.Artwork.artwork_id)" class="form-control">

                                                                                                <div class="row">
                                                                                                    <div class="col-sm-6">
                                                                                                        <label>Email address *</label>
                                                                                                        <input type="email" id="checkoutemail_@(item.Artwork.artwork_id)" class="form-control" value="@ViewBag.User.user_email">
                                                                                                    </div><!-- End .col-sm-6 -->

                                                                                                    <div class="col-sm-6">
                                                                                                        <label>Phone *</label>
                                                                                                        <input type="tel" id="checkoutphone_@(item.Artwork.artwork_id)" class="form-control" value="@ViewBag.User.user_phone">
                                                                                                    </div><!-- End .col-sm-6 -->
                                                                                                </div><!-- End .row -->
                                                                                            </div><!-- End .col-lg-9 -->
                                                                                            <aside class="col-lg-5">
                                                                                                <div class="summary">
                                                                                                    <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->

                                                                                                    <table class="table table-summary">
                                                                                                        <thead>
                                                                                                            <tr>
                                                                                                                <th>Artwork</th>
                                                                                                                <th>Total</th>
                                                                                                            </tr>
                                                                                                        </thead>

                                                                                                        <tbody>

                                                                                                            <tr class="summary-subtotal">
                                                                                                                <td>@item.Artwork.artwork_name</td>
                                                                                                                <td>$@item.auction_current_bid.00</td>
                                                                                                            </tr><!-- End .summary-subtotal -->
                                                                                                            <tr>
                                                                                                                <td>Shipping:</td>
                                                                                                                <td>Free shipping</td>
                                                                                                            </tr>
                                                                                                            <tr class="summary-total">
                                                                                                                <td>Total:</td>
                                                                                                                <td>$@item.auction_current_bid.00</td>
                                                                                                            </tr><!-- End .summary-total -->
                                                                                                        </tbody>
                                                                                                    </table><!-- End .table table-summary -->

                                                                                                    <div class="accordion-summary" id="accordion-payment">
                                                                                                        <div class="card">
                                                                                                            <div class="card-header" id="heading-1">
                                                                                                                <h2 class="card-title">
                                                                                                                    <a role="button" data-toggle="collapse" href="#collapse-1" aria-expanded="true" aria-controls="collapse-1">
                                                                                                                        VNPay
                                                                                                                    </a>
                                                                                                                </h2>
                                                                                                            </div><!-- End .card-header -->
                                                                                                            <div id="collapse-1" class="collapse show" aria-labelledby="heading-1" data-parent="#accordion-payment">
                                                                                                                <div class="card-body">
                                                                                                                    VNPAY applies modern and breakthrough technology in the field of electronic payment in order to
                                                                                                                    building a diverse service ecosystem in terms of products, utilities, and experiences
                                                                                                                    superior service to serve customers and partners.
                                                                                                                </div><!-- End .card-body -->
                                                                                                            </div><!-- End .collapse -->
                                                                                                        </div><!-- End .card -->
                                                                                                    </div><!-- End .accordion -->
                                                                                                    <input id="artworkId_@(item.Artwork.artwork_id)" hidden value="@item.Artwork.artwork_id" />
                                                                                                    <input id="auctionPrice_@(item.Artwork.artwork_id)" hidden value="@item.auction_current_bid" />
                                                                                                    <button id="submitCheckout_(@item.Artwork.artwork_id)" type="button" data-id="@item.Artwork.artwork_id" data-total="@item.auction_current_bid" class="submitCheckout btn btn-outline-primary-2 btn-order btn-block">
                                                                                                        <span class="btn-text">Place Order</span>
                                                                                                        <span class="btn-hover-text">Proceed to Checkout</span>
                                                                                                        <span class="" id="checkoutspinner" role="status" aria-hidden="true"></span>
                                                                                                    </button>
                                                                                                </div><!-- End .summary -->
                                                                                            </aside><!-- End .col-lg-3 -->
                                                                                        </div><!-- End .row -->
                                                                                    </form>
                                                                                </div><!-- End .container -->
                                                                            </div><!-- End .checkout -->
                                                                        </div><!-- End .page-content -->
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>

                                                        <a href="/" class="mt-2 btn-product btn-cart"><span>add to cart</span></a><!-- Button trigger modal -->
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div><!-- .End .tab-pane -->
                                <div class="tab-pane fade" id="tab-address" role="tabpanel" aria-labelledby="tab-address-link">
                                    <p>The following addresses will be used on the checkout page by default.</p>

                                    <div class="row">

                                        <div class="col-lg-6">
                                            <div class="card card-dashboard">
                                                <div class="card-body">
                                                    <h3 class="card-title">Shipping Address</h3><!-- End .card-title -->

                                                    <p>
                                                        You have not set up this type of address yet.<br>
                                                        <a href="#">Edit <i class="icon-edit"></i></a>
                                                    </p>
                                                </div><!-- End .card-body -->
                                            </div><!-- End .card-dashboard -->
                                        </div><!-- End .col-lg-6 -->
                                    </div><!-- End .row -->
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                                    <form action="/FEUser/UserEdit" method="Post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>First Name</label>
                                                <input name="user_fname" type="text" class="form-control" required="" value="@ViewBag.User.user_fname">
                                            </div><!-- End .col-sm-6 -->

                                            <div class="col-sm-6">
                                                <label>Last Name</label>
                                                <input name="user_lname" type="text" class="form-control" required="" value="@ViewBag.User.user_lname">
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Email address</label>
                                                <input name="user_email" type="email" class="form-control" required="" value="@ViewBag.User.user_email" disabled>
                                            </div>
                                            <div class="col-sm-6">
                                                <label>Phone</label>
                                                <input name="user_phone" type="text" class="form-control" required="" value="@ViewBag.User.user_phone">
                                            </div>
                                        </div>

                                        <div>
                                            <label>Current Image</label>
                                            @if (ViewBag.User.user_image != null)
                                            {
                                                <img style="width:250px" src="~/Content/assets/images/user/@ViewBag.User.user_image" />
                                            }
                                            else
                                            {
                                                <img src="~/Content/assets/images/no-image.png" />
                                            }
                                        </div>
                                        <div class="mt-2">
                                            <label>Upload Image</label>
                                            <input type="file" class="form-control" name="user_image" />
                                        </div>
                                        <button type="submit" class="btn btn-outline-primary-2 mt-2">
                                            <span>SAVE CHANGES</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>

                                    </form>
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-password" role="tabpanel" aria-labelledby="tab-password-link">
                                    <form id="resetPassword">

                                        <label>Current password (leave blank to leave unchanged)</label>
                                        <input type="password" class="form-control" name="current_password" id="current_password" required>

                                        <label>New password (leave blank to leave unchanged)</label>
                                        <input type="password" class="form-control" name="new_password" id="new_password" required>

                                        <label>Confirm new password</label>
                                        <input type="password" class="form-control mb-2" name="reset_password" id="reset_password" required>

                                        <button type="submit" class="btn btn-outline-primary-2">
                                            <span>SAVE CHANGES</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>
                                    </form>
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-artwork" role="tabpanel" aria-labelledby="tab-artwork-link">

                                    <form action="/FEUser/RequestArtwork" enctype="multipart/form-data" method="Post">
                                        <div class="block-content fs-sm pb-3">
                                            <div class="form-group mb-1">
                                                <label class="form-label">Artwork <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" name="artwork_name">
                                            </div>
                                            <div class="form-group mb-1 row">
                                                <div class="col-6">
                                                    <label class="form-label">Artist <span class="text-danger">*</span></label>
                                                    <select class="form-select form-control bg-light" name="artist_id">
                                                        @foreach (var item in ViewBag.Artists)
                                                        {
                                                            <option value="@item.artist_id">@item.artist_name</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-6">
                                                    <label class="form-label">Category <span class="text-danger">*</span></label>
                                                    <select class="form-select form-control bg-light" name="category_id">
                                                        @foreach (var item in ViewBag.Category)
                                                        {
                                                            <option value="@item.category_id">@item.category_name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group mb-1 row">
                                                <div class="col-6">
                                                    <label class="form-label">Price <span class="text-danger">*</span></label>
                                                    <input type="number" onkeydown="" class="form-control" name="artwork_price">
                                                </div>
                                                <div class="col-6">
                                                    <label class="form-label">Date <span class="text-danger">*</span></label>
                                                    <input type="date" class="form-control" name="artwork_date">
                                                </div>
                                            </div>
                                            <div class="form-group mb-1 row">
                                                <div class="col-6">
                                                    <label class="form-label">Width <span class="text-danger">*</span></label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="width">
                                                        <span class="input-group-text " style="height: 40px;">CM</span>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <label class="form-label">Height <span class="text-danger">*</span></label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="height">
                                                        <span class="input-group-text" style="height: 40px;">CM</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group mb-1">
                                                <label class="form-label">Image <span class="text-danger">*</span></label>
                                                <input type="file" class="form-control" name="artwork_image">
                                            </div>
                                            <div class="form-group mb-1 row">
                                                <div class="col-9">
                                                    <label class="form-label">Description <span class="text-danger">*</span></label>
                                                    <textarea rows="8" class="form-control" name="artwork_description"></textarea>
                                                </div>
                                                <div class="col-3">
                                                    <label class="form-label">Preview <span class="text-danger">*</span></label>
                                                    <img class="img-fluid bg-secondary" id="artwork_preview" style="width: 100%; height: 200px" />
                                                </div>
                                                <span class="text-danger" id="artworkalert"></span>
                                            </div>
                                            <div class="mt-2">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>

                                </div><!-- .End .tab-pane -->
                            </div>
                        </div><!-- End .col-lg-9 -->
                    </div><!-- End .row -->
                </div><!-- End .container -->
            </div><!-- End .dashboard -->
        </div><!-- End .page-content -->
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/Content/js/auction.js"></script>
    <script>

        $("#resetPassword").on('submit', function (e) {
            e.preventDefault();
            var form_data = $(this).serialize();
            console.log(form_data);

            $.ajax({
                url: "/FEUser/EditPassword",
                method: "Post",
                data: form_data
            }).done(function (res) {
                $('.toast-body').text(res);
                $('#toast').toast('show');
                $('#current_password').text("");
            });
        });
        $(document).ready(function () {

            var countdownList = document.querySelectorAll('.countdown');
            countdownList.forEach(function (countdown) {
                if (countdown.textContent != "Finished") {
                    countdown.style.backgroundColor = 'green';

                } else {
                    countdown.style.backgroundColor = 'gray';
                };
            })
        });
    </script>
    <script>
        $(document).ready(function ($) {

            $('#checkout').submit(function (event) {
                event.preventDefault();
                $('#checkoutspinner').addClass('spinner-border spinner-border-sm');
                $('#submitCheckout').prop('disabled', true);

                var fname = $('#fname').val().trim();
                var lname = $('#lname').val().trim();
                var address = $('#address').val().trim();
                var email = $('#checkoutemail').val().trim();
                var phone = $('#checkoutphone').val().trim();
                var total = $('#submitCheckout').data('total');


                if (fname == '' || lname == '' || email == '' || phone == '' || address == '') {
                    $('.toast-body').text("Shipping Information is Require !!!");
                    $('#toast').toast('show');
                    $('#toast').removeClass('bg-primary').addClass('bg-danger');
                    $('#checkoutspinner').removeClass('spinner-border spinner-border-sm');
                    $('#submitCheckout').prop('disabled', false);
                    return;
                }

                $.ajax({
                    method: "POST",
                    url: "/FEOrder/PayNow",
                    data: {
