
@{
    ViewBag.Title = "View";

}

@section main
{
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">My Account<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">My Account</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="dashboard">
                <div class="container">
                    <div class="row">
                        <aside class="col-md-4 col-lg-3">
                            <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="tab-dashboard-link" data-toggle="tab" href="#tab-dashboard" role="tab" aria-controls="tab-dashboard" aria-selected="true">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-orders-link" data-toggle="tab" href="#tab-orders" role="tab" aria-controls="tab-orders" aria-selected="false">Orders</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-auction-link" data-toggle="tab" href="#tab-auction" role="tab" aria-controls="tab-auction" aria-selected="false">Auction</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-wonauction-link" data-toggle="tab" href="#tab-wonauction" role="tab" aria-controls="tab-wonauction" aria-selected="false">Won Auction</a>
                                </li>
                              
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-account-link" data-toggle="tab" href="#tab-account" role="tab" aria-controls="tab-account" aria-selected="false">Account Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-password-link" data-toggle="tab" href="#tab-password" role="tab" aria-controls="tab-password" aria-selected="false">Reset password</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-art-link" data-toggle="tab" href="#tab-art" role="tab" aria-controls="tab-art" aria-selected="false">Artwork</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-artwork-link" data-toggle="tab" href="#tab-artwork" role="tab" aria-controls="tab-artwork" aria-selected="false">Request artwork</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/FEAuth/Logout">Sign Out</a>
                                </li>
                            </ul>
                        </aside><!-- End .col-lg-3 -->

                        <div class="col-md-8 col-lg-9">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">

                                    @if (TempData["SuccessMessage"] != null)
                                    {

                                        <span class="product-label label-new p-3">@TempData["SuccessMessage"]</span>
                                    }
                                    @if (TempData["FailedMessage"] != null)
                                    {
                                        <span class="product-label label-sale p-3">@TempData["FailedMessage"]</span>
                                    }
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Order Id</th>
                                                <th>Order Detail</th>
                                                <th>Total Price</th>
                                                <th>Detail</th>
                                                <th>Status</th>
                                                <th>Created Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Order)
                                            {
                                                <tr>
                                                    <td>@item.OrderId</td>
                                                    <td style="padding:0">
                                                        @foreach (var i in item.OrderItem)
                                                        {
                                                            <div class="d-flex mt-1 mb-1">
                                                                <img src="~/Content/assets/images/artwork/@i.Image" style="height:60px; width:60px" />
                                                                <p class="mt-2 ml-3">@i.Name</p>
                                                                <p class="mt-2 ml-3">$@i.Price</p>
                                                            </div>
                                                        }
                                                    </td>
                                                    <td class="font-weight-bold text-primary">
                                                        $@item.OrderPrice
                                                    </td>
                                                    <td>
                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal@(item.OrderId)">
                                                            Detail
                                                        </button>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="exampleModal@(item.OrderId)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered " style="max-width: 1200px;">

                                                                <div class="modal-content p-5">
                                                                    <div class="d-flex">
                                                                        <div class="summary summary-cart col-6" style="margin-bottom: 0;">
                                                                            <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->

                                                                            <table class="table table-summary">
                                                                                <tbody>
                                                                                    @foreach (var i in item.OrderItem)
                                                                                    {
                                                                                        <tr class="">
                                                                                            <td>@i.Name</td>
                                                                                            <td>$@i.Price</td>
                                                                                        </tr>

                                                                                    }
                                                                                    <tr class="summary-subtotal">
                                                                                        <td>Subtotal:</td>
                                                                                        <td>$@item.OrderPrice</td>
                                                                                    </tr><!-- End .summary-subtotal -->
                                                                                    <tr class="summary-shipping">
                                                                                        <td>Shipping:</td>
                                                                                        <td>Freeship</td>
                                                                                    </tr>
                                                                                    <tr class="summary-total">
                                                                                        <td>Total:</td>
                                                                                        <td>$@item.OrderPrice</td>
                                                                                    </tr><!-- End .summary-total -->
                                                                                </tbody>
                                                                            </table><!-- End .table table-summary -->
                                                                        </div>
                                                                        <div class="col-6">
                                                                            <h5 class="text-center text-primary mb-3">Address Information</h5>
                                                                            <div class="d-flex ">
                                                                                <div class="form-group col-6">
                                                                                    <label>First Name</label>
                                                                                    <input class="form-control" value="@item.Fname" disabled>
                                                                                </div>
                                                                                <div class="form-group col-6">
                                                                                    <label>Last Name</label>
                                                                                    <input class="form-control" value="@item.Lname" disabled>
                                                                                </div>
                                                                            </div>
                                                                            <div class="d-flex">
                                                                                <div class="form-group col-6">
                                                                                    <label>Email</label>
                                                                                    <input class="form-control" value="@item.Email" disabled>
                                                                                </div>
                                                                                <div class="form-group col-6">
                                                                                    <label>Phone</label>
                                                                                    <input class="form-control" value="@item.Phone" disabled>
                                                                                </div>
                                                                            </div>
                                                                            <div class="d-flex">
                                                                                <div class="form-group col-12">
                                                                                    <label>Address</label>
                                                                                    <input class="form-control" value="@item.Address" disabled>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                </div>

                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge badge-success" style=" padding: 10px;">VN Pay </span> </td>
                                                    <td>
                                                        @item.CreatedDate
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-auction" role="tabpanel" aria-labelledby="tab-auction-link">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Artwork</th>
                                                <th>Reserve Price</th>
                                                <th>Your bid</th>
                                                <th>Current bid</th>
                                                <th>Time</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Auction)
                                            {
                                                <tr>
                                                    <td class="d-flex">
                                                        <div>
                                                            <img style="height:95px;width:95px" src="~/Content/assets/images/artwork/@item.artwork_image" />
                                                        </div>
                                                        <div class="ml-3" style=" padding-top: 15px;">
                                                            <a style="font-weight:500" href="/FEArtwork/ArtworkDetail/@item.artwork_id">@item.artwork_name</a>
                                                            <span class="d-block">by <a href="/FEArtwork/Artist/@item.artist_id">@item.artist_name</a> </span>
                                                        </div>
                                                    </td>
                                                    <td>$@item.reserve_price</td>
                                                    <td>$@item.your_bid</td>
                                                    <td>$@item.current_bid</td>
                                                    <td>
                                                        <span id="start-date" hidden class="start-date">@item.start_date</span>
                                                        <span id="end-date" hidden class="end-date">@item.end_date</span>
                                                        <div id="countdown" class="text-center text-white countdown" style="opacity: .5;width:179px" data-start="@item.start_date" data-end="@item.end_date">
                                                            <strong>

                                                            </strong>

                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div><!-- .End .tab-pane -->
                                <div class="tab-pane fade" id="tab-wonauction" role="tabpanel" aria-labelledby="tab-wonauction-link">
                                    <div class="row">
                                        @foreach (var item in ViewBag.WonAuction)
                                        {
                                            <div class="col-12 mb-3">
                                                <div class=" d-flex" style="box-shadow: rgba(0, 0, 0, 0.13) 0px 3.2px 7.2px, rgba(0, 0, 0, 0.11) 0px 0.6px 1.8px;">
                                                    <div class="">
                                                        <img style="height:230px" src="~/Content/assets/images/artwork/@item.Artwork.artwork_image" />
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="pl-4">
                                                            <div class="pt-1">
                                                                <p style="margin: 0; font-size: 20px; "> <a href="/FEArtwork/ArtworkDetail/@item.Artwork.artwork_id">@item.Artwork.artwork_name</a></p>
                                                                <span>by <a href="/FEArtwork/Artist/@item.Artwork.Artist.artist_id"> @item.Artwork.Artist.artist_name</a></span>
                                                            </div>
                                                            <div>
                                                                <p>Description</p>
                                                                <p style="line-height: normal;">@item.Artwork.artwork_description</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div style="text-align: center; padding: 20px;" class="col-3">
                                                        <p style="font-weight:500">Amount to pay</p>
                                                        <p>$@item.auction_current_bid</p>
                                                        <!-- Button trigger modal -->
                                                        @if (item.Artwork.artwork_status == 3)
                                                        {
                                                            <p>Status</p>
                                                            <span class="badge badge-info p-3">Payment</span>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#id@(item.Artwork.artwork_id)">
                                                                Pay now
                                                            </button>

                                                            <!-- Modal -->
                                                            <div style="text-align:left" class="modal fade" id="id@(item.Artwork.artwork_id)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                                <div class="modal-dialog modal-dialog-centered" style="max-width:1000px">
                                                                    <div class="modal-content">
                                                                        <div class="modal-body p-5">
                                                                            <div class="">
                                                                                <div class="checkout">
                                                                                    <div class="container">
                                                                                        <form class="paynow">
                                                                                            <div class="row">
                                                                                                <div class="col-lg-7">
                                                                                                    <h2 class="checkout-title">Billing Details</h2><!-- End .checkout-title -->
                                                                                                    <div class="row">
                                                                                                        <div class="col-sm-6">
                                                                                                            <label>First Name *</label>
                                                                                                            <input type="text" class="fname form-control" value="@ViewBag.User.user_fname">
                                                                                                        </div><!-- End .col-sm-6 -->

                                                                                                        <div class="col-sm-6">
                                                                                                            <label>Last Name *</label>
                                                                                                            <input type="text" class="lname form-control" value="@ViewBag.User.user_lname">
                                                                                                        </div><!-- End .col-sm-6 -->
                                                                                                    </div><!-- End .row -->

                                                                                                    <label>Address *</label>
                                                                                                    <input type="text" class="form-control address">

                                                                                                    <div class="row">
                                                                                                        <div class="col-sm-6">
                                                                                                            <label>Email address *</label>
                                                                                                            <input type="email" class="form-control checkoutemail" value="@ViewBag.User.user_email">
                                                                                                        </div><!-- End .col-sm-6 -->

                                                                                                        <div class="col-sm-6">
                                                                                                            <label>Phone *</label>
                                                                                                            <input type="tel" class="form-control checkoutphone" value="@ViewBag.User.user_phone">
                                                                                                        </div><!-- End .col-sm-6 -->
                                                                                                    </div><!-- End .row -->
                                                                                                </div><!-- End .col-lg-9 -->
                                                                                                <aside class="col-lg-5">
                                                                                                    <div class="summary">
                                                                                                        <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->

                                                                                                        <table class="table table-summary">
                                                                                                            <thead>
                                                                                                                <tr>
                                                                                                                    <th>Artwork</th>
                                                                                                                    <th>Total</th>
                                                                                                                </tr>
                                                                                                            </thead>

                                                                                                            <tbody>

                                                                                                                <tr class="summary-subtotal">
                                                                                                                    <td>@item.Artwork.artwork_name</td>
                                                                                                                    <td>$@item.auction_current_bid.00</td>
                                                                                                                </tr><!-- End .summary-subtotal -->
                                                                                                                <tr>
                                                                                                                    <td>Shipping:</td>
                                                                                                                    <td>Free shipping</td>
                                                                                                                </tr>
                                                                                                                <tr class="summary-total">
                                                                                                                    <td>Total:</td>
                                                                                                                    <td>$@item.auction_current_bid.00</td>
                                                                                                                </tr><!-- End .summary-total -->
                                                                                                            </tbody>
                                                                                                        </table><!-- End .table table-summary -->

                                                                                                        <div class="accordion-summary" id="accordion-payment">
                                                                                                            <div class="card">
                                                                                                                <div class="card-header" id="heading-1">
                                                                                                                    <h2 class="card-title">
                                                                                                                        <a role="button" data-toggle="collapse" href="#collapse-1" aria-expanded="true" aria-controls="collapse-1">
                                                                                                                            VNPay
                                                                                                                        </a>
                                                                                                                    </h2>
                                                                                                                </div><!-- End .card-header -->
                                                                                                                <div id="collapse-1" class="collapse show" aria-labelledby="heading-1" data-parent="#accordion-payment">
                                                                                                                    <div class="card-body">
                                                                                                                        VNPAY applies modern and breakthrough technology in the field of electronic payment in order to
                                                                                                                        building a diverse service ecosystem in terms of products, utilities, and experiences
                                                                                                                        superior service to serve customers and partners.
                                                                                                                    </div><!-- End .card-body -->
                                                                                                                </div><!-- End .collapse -->
                                                                                                            </div><!-- End .card -->
                                                                                                        </div><!-- End .accordion -->
                                                                                                        <input class="artworkId" hidden value="@item.Artwork.artwork_id" />
                                                                                                        <input class="auctionPrice" hidden value="@item.auction_current_bid" />

                                                                                                        <button class="submitCheckout btn btn-outline-primary-2 btn-order btn-block" type="submit" data-id="@item.Artwork.artwork_id" data-total="@item.auction_current_bid">
                                                                                                            <span class="btn-text">Place Order</span>
                                                                                                            <span class="btn-hover-text">Proceed to Checkout</span>
                                                                                                            <span class="checkoutspinner" role="status" aria-hidden="true"></span>
                                                                                                        </button>
                                                                                                    </div><!-- End .summary -->
                                                                                                </aside><!-- End .col-lg-3 -->
                                                                                            </div><!-- End .row -->
                                                                                        </form>

                                                                                    </div><!-- End .container -->
                                                                                </div><!-- End .checkout -->
                                                                            </div><!-- End .page-content -->
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <a href="" data-cart-id="@item.Artwork.artwork_id" style="margin-left: 36px; width: 130px;" class="mt-2 btn-product btn-cart cart"><span>add to cart</span></a><!-- Button trigger modal -->
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div><!-- .End .tab-pane -->
                               

                                <div class="tab-pane fade" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                                    <form action="/FEUser/UserEdit" method="Post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>First Name</label>
                                                <input name="user_fname" type="text" class="form-control" required="" value="@ViewBag.User.user_fname">
                                            </div><!-- End .col-sm-6 -->

                                            <div class="col-sm-6">
                                                <label>Last Name</label>
                                                <input name="user_lname" type="text" class="form-control" required="" value="@ViewBag.User.user_lname">
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Email address</label>
                                                <input name="user_email" type="email" class="form-control" required="" value="@ViewBag.User.user_email" disabled>
                                            </div>
                                            <div class="col-sm-6">
                                                <label>Phone</label>
                                                <input name="user_phone" type="text" class="form-control" required="" value="@ViewBag.User.user_phone">
                                            </div>
                                        </div>

                                        <div>
                                            <label>Current Image</label>
                                            @if (ViewBag.User.user_image != null)
                                            {
                                                <img style="width:250px" src="~/Content/assets/images/user/@ViewBag.User.user_image" />
                                            }
                                            else
                                            {
                                                <img src="~/Content/assets/images/no-image.png" />
                                            }
                                        </div>
                                        <div class="mt-2">
                                            <label>Upload Image</label>
                                            <input type="file" class="form-control" name="user_image" />
                                        </div>
                                        <button type="submit" class="btn btn-outline-primary-2 mt-2">
                                            <span>SAVE CHANGES</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>

                                    </form>
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-password" role="tabpanel" aria-labelledby="tab-password-link">
                                    <form id="resetPassword">

                                        <label>Current password (leave blank to leave unchanged)</label>
                                        <input type="password" class="form-control" name="current_password" id="current_password" required>

                                        <label>New password (leave blank to leave unchanged)</label>
                                        <input type="password" class="form-control" name="new_password" id="new_password" required>

                                        <label>Confirm new password</label>
                                        <input type="password" class="form-control mb-2" name="reset_password" id="reset_password" required>

                                        <button type="submit" class="btn btn-outline-primary-2">
                                            <span>SAVE CHANGES</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>
                                    </form>
                                </div><!-- .End .tab-pane -->
                                <div class="tab-pane fade" id="tab-art" role="tabpanel" aria-labelledby="tab-art-link">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Detail</th>
                                                <th>Status</th>
                                                <th>Created Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ 
                                                var y = 0;
                                            }
                                            @foreach (var item in ViewBag.Request)
                                            {
                                                y += 1;
                                                <tr>
                                                    <td>@y</td>
                                                    <td> 
                                                        <img style="height:95px;width:95px" src="~/Content/assets/images/artwork/@item.ArtworkImage" />
                                                    </td>
                                                    <td>
                                                        @if (item.ArtworkStatus == 1)
                                                        {
                                                            <a style="font-weight:500" href="/FEArtwork/ArtworkDetail/@item.ArtworkId">@item.ArtworkName</a>
                                                        }
                                                        else
                                                        {
                                                            <a style="font-weight:500">@item.ArtworkName</a>

                                                        }
                                                    </td>
                                                    <td>
                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#request@(item.ArtworkId)">
                                                            Detail
                                                        </button>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="request@(item.ArtworkId)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered " style="max-width:1100px">
                                                                <div class="modal-content">
                                                                    <h5 class="text-center text-primary mb-1 mt-2">Artwork Information</h5>
                                                                    <div class="d-flex">
                                                                        <div class="col-6 p-4 ">
                                                                            <img style="height:350px;width:100%" src="~/Content/assets/images/artwork/@item.ArtworkImage" />
                                                                        </div>
                                                                        <div class="col-6 p-4">
                                                                            <div class="row">
                                                                                <div class="col-6">
                                                                                    <span style="font-weight:400">Artwork Name</span>
                                                                                    <p>@item.ArtworkName </p>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <span style="font-weight:400">Artist</span>
                                                                                    <p>@item.ArtistName </p>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <span style="font-weight:400">Category</span>
                                                                                    <p>@item.CategoryName </p>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <span style="font-weight:400">Price</span>
                                                                                    <p>$ @item.ArtworkPrice </p>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <span style="font-weight:400">Dimensions</span>
                                                                                    <p>@item.Dimensions (cm)</p>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <span style="font-weight:400">Date</span>
                                                                                    <p>@item.Date </p>
                                                                                </div>
                                                                                <div class="col-12">
                                                                                    <span style="font-weight:400">Description</span>
                                                                                    <p>@item.Description </p>
                                                                                </div>
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @if (item.ArtworkStatus == 1)
                                                        {
                                                            <span class="badge badge-success p-3">On sale</span>
                                                        }
                                                        else if (item.ArtworkStatus == 4)
                                                        {
                                                            <span class="badge badge-secondary p-3">Pending approval</span>
                                                        }
                                                        else if (item.ArtworkStatus == 3)
                                                        {
                                                            <span class="badge badge-info p-3">Sold out</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger p-3">Refuse</span>
                                                        }
                                                    </td>
                                                   
                                                    <td>@item.CreatedDate</td>
