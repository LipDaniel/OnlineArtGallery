
@{
    ViewBag.Title = "ArtList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section main
{
    <div class="container-fluid mt-3">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <!--Header-->
                <strong>CATEGORY LIST</strong>
                <!--End Header-->
            </div>            
            <div class="block-content pb-3">
                <div class="block-content tab-content ps-0 pe-0">
                    <!--Modal Bootstrap Form-->
                    <!--Button open form-->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add New Category</button>
                    <!--End Button open form-->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="category-name" class="col-form-label">Categoy Name: </label>
                                            <input type="text" class="form-control" id="inputCategory" aria-describedby="nameRule" placeholder="Enter Category Name.">
                                            <small id="nameRule" class="form-text text-muted">Category name rule</small>
                                        </div>
                                        <div class="form-group">
                                            <label for="category-description" class="col-form-label">Categoy Description: </label>
                                            <textarea class="form-control" id="inputCategory" placeholder="Enter Category Description." maxlength="300"> </textarea>                                         
                                        </div>
                                        <div class="form-group">
                                            <label for="message-text" class="col-form-label">Category image: </label>
                                            <input type="file">
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End Modal Bootstrap Form-->
                    <!--Category Table List-->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category ID</th>
                                <th scope="col">Category Image</th>
                                <th scope="col">Category Name</th>
                                <th scope="col">Category Description</th>
                                <th scope="col">Created Date</th>
                            </tr>                       
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Category ID</td>
                                <td>Category Image</td>
                                <td>Category Name</td>
                                <td>Category Description</td>
                                <td>Created Date</td>
                            </tr>
                        </tbody>
                    </table>
                    <!--End Category Table List-->
                </div>                 
              </div>
         </div>
    </div>
}

