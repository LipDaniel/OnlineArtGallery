
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section main
{
    @model OnlineArtGallery.Models.Entities.Category

    <div class="container-fluid mt-3">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <strong>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="">Create New Category</button>
                </strong>
            </div>
            <div class="block-content pb-3">

                <div class="block-content tab-content ps-0 pe-0">
                    <div class="tab-pane active" id="published-posts-tab" role="tabpanel" aria-labelledby="btabs-alt-static-home-tab">
                        <table class="table table-sm table-responsive table table-striped  js-dataTable-responsive dataTable no-footer dtr-inline">
                            <thead>

                                <tr>
                                    <th>Number</th>
                                    <th>Name </th>
                                    <th>Image</th>
                                    <th>Create</th>
                                    <th>Status</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var s = 0;
                                }
                                @foreach (var cate in ViewBag.Category)
                                {
                                    s += 1;
                                    <tr>
                                        <td>@s</td>
                                        <td>@cate.category_name</td>
                                        <td>@cate.category_created_date</td>
                                        <td>@cate.category_is_status</td>
                                        <td>
                                            <img width="50px" src="~/Content/assets/images/artistimg/@cate.category_image" alt="Alternate Text" />
                                        </td>
                                        <td>
                                            @{
                                                var ar = "exampleModal" + cate.category_id;
                                            }
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@ar" data-bs-whatever="@cate.category_id">Edit</button>
                                            <div class="modal fade" id="@ar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form method="post" action="@Url.Action("EditCategory", "BECategory")" enctype="multipart/form-data">
                                                                <input type="text" value="@cate.category_id" name="category_id" class="form-control" hidden>
                                                                <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Name Category:</label>
                                                                    <input type="text" value="@cate.category_name" name="category_name" class="form-control">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Status</label>
                                                                    <input class="form-check-input" type="checkbox" name="" value="@cate.category_is_status" id="flexCheckChecked" checked>

                                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Image Image:</label>
                                                                    <img width="150px" src="~/Content/assets/images/artistimg/@cate.category_image" alt="Alternate Text" />
                                                                    <input type="file" name="category_image" value="" />
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button id="btnSave" type="submit" class="btn btn-primary">Submit</button>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @*form add artist*@
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="@Url.Action("NewCategory", "BECategory")" enctype="multipart/form-data">
                        <input type="text" name="category_id" class="form-control" hidden>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Name Category:</label>
                            <input type="text" name="category_name" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Image Category:</label>
                            <input type="file" name="category_image" value="" />
                        </div>
                        <div class="mb-3">
                            <input class="form-check-input" type="checkbox" name="category_is_status" value="" id="flexCheckChecked" checked>
                        </div>
                        <div class="modal-footer">
                            <button id="btnSave" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

