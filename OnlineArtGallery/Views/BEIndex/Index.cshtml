    <script src="/Content/adminassets/js/pages/be_tables_datatables.min.js"></script>
    <script src="/Content/adminassets/js/plugins/chart.js/chart.min.js"></script>
    <script src="/Content/adminassets/js/pages/be_pages_dashboard.js"></script>
