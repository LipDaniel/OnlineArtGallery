
@{
    ViewBag.Title = "ArtSellRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@section main
{
    <div class="container-fluid mt-3">

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <strong>ARTWORKS LIST</strong>
                <div class="block-options">
                    <button class="btn btn-alt-success" data-bs-toggle="modal" data-bs-target="#createartwork_modal">
                        ADD
                    </button>
                </div>
            </div>
            <div class="block-content pb-3">
                <div class="block-content tab-content ps-0 pe-0">
                    <table class="table table-sm table-responsive table-hover js-dataTable-responsive dataTable no-footer dtr-inline">
                        <thead>
                        <th>#</th>
                        <th>Artwork</th>
                        <th>Price</th>
                        <th>Artist</th>
                        <th>Information</th>
                        <th>Status</th>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in ViewBag.Artwork)
                            {
                                <tr class="align-middle">
                                    <td>@i</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0 me-2">
                                                <img src="~/Content/assets/images/artwork/@item.artwork_image" width="70" class="img-fluid" alt="Alternate Text" />
                                            </div>
                                            <div class="flex-grow-1">
                                                <strong>@item.artwork_name</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @item.artwork_price
                                    </td>
                                    <td>
                                        @item.artist_id
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">Dimmession: @item.artwork_dimensions</span> <br />
                                        <span class="badge bg-secondary">Date: @item.artwork_date</span> <br />
                                        <span class="badge bg-secondary">Category: @item.category_id</span> <br />
                                    </td>
                                    <td>
                                        On Sale
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}


@section modals
{
    @Html.Partial("~/Views/Shared/AdminModals/_Artwork.cshtml")
}

