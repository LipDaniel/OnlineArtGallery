
@{
    ViewBag.Title = "GalleryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section main
{

    <button type="button" class="btn btn-primary w-25" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="">Create New Gallery</button>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Gallery</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="~/Views/BEIndex/ArtistList.cshtml">
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Name:</label>
                            <input type="text" name="artist_name" class="form-control" id="recipient-name">
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Image:</label>
                            <input type="text" name="artist_country" class="form-control" id="recipient-name">
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Description:</label>
                            <textarea class="form-control" name="artist_bio" id="message-text"></textarea>
                        </div>
                        <div class="modal-footer">
                            <input type="button" value="Submit" class="btn btn-primary">Send message</>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    @*//////*@
    <div class="container-fluid mt-3">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <strong>FAVOURITE</strong>
            </div>
            <div class="block-content pb-3">
                <div class="block-content tab-content ps-0 pe-0">
                    <table class="table table-sm table-responsive table-hover js-dataTable-responsive dataTable no-footer dtr-inline">
                        <thead>
                            <tr>
                                <th>Requested Date<</th>
                                <th>Artist</th>
                                <th>Artwork title</th>
                                <th>Sell price</th>
                                <th>Tag</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>12</td>
                                <td>12</td>
                                <td>12</td>
                                <td>12</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

