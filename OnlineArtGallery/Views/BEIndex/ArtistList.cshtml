@{
    ViewBag.Title = "ArtistList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section main
{

    @model OnlineArtGallery.Models.Entities.Artist
   
    <div class="container-fluid mt-3">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <strong>ARTWORK REQUEST</strong>
            </div>
            <div class="block-content pb-3">
                <ul class="nav nav-tabs nav-fill nav-tabs-alt  " role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#published-posts-tab" role="tab" aria-selected="true">
                            APPROVED
                            &nbsp<span class="badge bg-danger">0<!--Cập Nhật Số Lượng--></span>
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="pendingTabs" data-bs-toggle="tab" data-bs-target="#pending-posts-tab" role="tab" aria-selected="false">
                            NOT PPROVED YET
                            &nbsp<span class="badge bg-danger">0<!--Cập Nhật Số Lượng--></span>
                        </button>
                    </li>

                </ul>

                <div class="block-content tab-content ps-0 pe-0">
                    <div class="tab-pane active" id="published-posts-tab" role="tabpanel" aria-labelledby="btabs-alt-static-home-tab">
                        <table class="table table-sm table-responsive table-hover js-dataTable-responsive dataTable no-footer dtr-inline">
                            <thead>
                            <th>Artworks List</th>
                            <th>TDate Created</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Gallery</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>12</td>
                                    <td>12</td>
                                    <td>12</td>
                                    <td>12</td>
                                    <td>12</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="pending-posts-tab" role="tabpanel" aria-labelledby="btabs-alt-static-profile-tab">
                        <table class="table table-sm table-responsive table-hover js-dataTable-responsive dataTable no-footer dtr-inline">
                            <thead>
                            <th>Artworks List</th>
                            <th>TDate Created</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Gallery</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>12</td>
                                    <td>12</td>
                                    <td>12</td>
                                    <td>12</td>
                                    <td>12</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-primary w-25 m-3" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="">Create New Artist</button>


    @*//////*@

    <div class="container-fluid mt-3">
        <div class="block block-rounded">
            <div class="block-content tab-content ps-0 pe-0">
                <div class="tab-pane active" id="published-posts-tab" role="tabpanel" aria-labelledby="btabs-alt-static-home-tab">

                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th> Name</th>
                                <th> Country</th>
                                <th>Artist Bio</th>
                                <th>Images</th>
                                <th>Create</th>
                                <th>Edit </th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var artist in ViewBag.Artists)
                            {
                                <tr>
                                    <td>@artist.artist_name</td>
                                    <td>@artist.artist_country</td>
                                    <td>@artist.artist_bio</td>
                                    <td>
                                        <img width="50px" src="~/Content/Assets/Images/artistimg/@artist.artist_image " alt="Alternate Text" />
                                    </td>
                                    <td>@artist.artist_created_date</td>
                                    <td>
                                        @{
                                            var ar = "exampleModal" + @artist.artist_id;
                                        }
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@ar" data-bs-whatever="@artist.artist_id">Edit</button>
                                        <div class="modal fade" id="@ar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">New Artist</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form method="post" action="@Url.Action("NewEdit","BEArt")" enctype="multipart/form-data">
                                                            <input type="text" value="@artist.artist_id" name="artist_id" class="form-control" hidden>
                                                            <div class="mb-3">
                                                                <label for="recipient-name" class="col-form-label">Name Artist:</label>
                                                                <input type="text" value="@artist.artist_name" name="artist_name" class="form-control">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="recipient-name" class="col-form-label">Country Artist:</label>
                                                                <input type="text" value="@artist.artist_country" name="artist_country" class="form-control">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="recipient-name" class="col-form-label">Image Artist:</label>
                                                                <img width="150px" src="~/Content/assets/images/artistimg/@artist.artist_image" alt="Alternate Text" />
                                                                <input type="file" name="artist_image" value="" />
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="recipient-name" class="col-form-label">Created date:</label>
                                                                <input type="text" value="@artist.artist_created_date" name="artist_created_date" class="form-control" disabled>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="message-text" class="col-form-label">Bio:</label>
                                                                <textarea class="form-control" name="artist_bio">@artist.artist_bio</textarea>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button id="btnSave" type="submit" class="btn btn-primary">Submit</button>
                                                            </div>
                                                        </form>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}


