@{
    List<OnlineArtGallery.Models.ModelView.CartView> lstCart = (List<OnlineArtGallery.Models.ModelView.CartView>
    )ViewData["lstCart"];
}
@section main
{
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Checkout<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Checkout</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="checkout">
                <div class="container">
                    <form id="checkout">
                        <div class="row">
                            <div class="col-lg-9">
                                <h2 class="checkout-title">Billing Details</h2><!-- End .checkout-title -->
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>First Name *</label>
                                        <input type="text" id="fname" class="form-control" value="@ViewBag.User.user_fname">
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label>Last Name *</label>
                                        <input type="text" id="lname" class="form-control" value="@ViewBag.User.user_lname">
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->

                                <label>Address *</label>
                                <input type="text" id="address" class="form-control">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Email address *</label>
                                        <input type="email" id="checkoutemail" class="form-control" value="@ViewBag.User.user_email">
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label>Phone *</label>
                                        <input type="tel" id="checkoutphone" class="form-control" value="@ViewBag.User.user_phone">
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->
                            </div><!-- End .col-lg-9 -->
                            <aside class="col-lg-3">
                                <div class="summary">
                                    <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->

                                    <table class="table table-summary">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @{
                                                var total = 0;
                                            }
                                            @foreach (var item in lstCart)
                                            {
                                                <tr>
                                                    <td><a href="/FEArtwork/ArtworkDetail/@item.ArtworkId">@item.ArtworkName</a></td>
                                                    <td>$@item.ArtworkPrice</td>
                                                </tr>
                                                total += int.Parse(@item.ArtworkPrice);
                                            }

                                            <tr class="summary-subtotal">
                                                <td>Subtotal:</td>
                                                <td>$@total.00</td>
                                            </tr><!-- End .summary-subtotal -->
                                            <tr>
                                                <td>Shipping:</td>
                                                <td>Free shipping</td>
                                            </tr>
                                            <tr class="summary-total">
                                                <td>Total:</td>
                                                <td>$@total.00</td>
                                            </tr><!-- End .summary-total -->
                                        </tbody>
                                    </table><!-- End .table table-summary -->

                                    <div class="accordion-summary" id="accordion-payment">
                                        <div class="card">
                                            <div class="card-header" id="heading-1">
                                                <h2 class="card-title">
                                                    <a role="button" data-toggle="collapse" href="#collapse-1" aria-expanded="true" aria-controls="collapse-1">
                                                        VNPay
                                                    </a>
                                                </h2>
                                            </div><!-- End .card-header -->
                                            <div id="collapse-1" class="collapse show" aria-labelledby="heading-1" data-parent="#accordion-payment">
                                                <div class="card-body">
                                                    VNPAY applies modern and breakthrough technology in the field of electronic payment in order to
                                                    building a diverse service ecosystem in terms of products, utilities, and experiences
                                                    superior service to serve customers and partners.
                                                </div><!-- End .card-body -->
                                            </div><!-- End .collapse -->
                                        </div><!-- End .card -->
                                    </div><!-- End .accordion -->

                                    <button type="submit" id="submitCheckout" data-total="@total" class="btn btn-outline-primary-2 btn-order btn-block">
                                        <span class="btn-text">Place Order</span>
                                        <span class="btn-hover-text">Proceed to Checkout</span>
                                        <span class="" id="checkoutspinner" role="status" aria-hidden="true"></span>
                                    </button>
                                </div><!-- End .summary -->
                            </aside><!-- End .col-lg-3 -->
                        </div><!-- End .row -->
                    </form>
                </div><!-- End .container -->
            </div><!-- End .checkout -->
        </div><!-- End .page-content -->
    </main>
}

@section scripts
{
    <script src="/Content/js/checkout.js"></script>
}
